<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.amap.api.maps.MapView

        android:id="@+id/map"

        android:layout_width="match_parent"

        android:layout_height="match_parent"></com.amap.api.maps.MapView>
    <LinearLayout
        android:id="@+id/ll_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:visibility="visible"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_ten">

        <ImageView
            android:id="@+id/iv_map_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/icon_back_white" />

        <TextView
            android:id="@+id/tv_map_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="景点名字"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_roundcorner"
        android:orientation="horizontal"
        android:visibility="gone"
        android:translationZ="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_mine"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_user" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/color_white"
            android:cursorVisible="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="搜索"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/color_gray" />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/tb_switch_layer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_map_sure"
        android:layout_margin="22dp"
        android:background="@color/colorPrimary"
        android:checked="false"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textOff="普通地图"
        android:textOn="卫星地图" />
    <LinearLayout
        android:id="@+id/ll_bottom_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/iv_guide"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_roundcorner"
            android:padding="1dp"
            android:text="游玩指引"
            android:textSize="8dp"
            android:translationZ="@dimen/dp_five"
            android:layout_marginLeft="16dp"
            android:drawableTop="@drawable/ic_guide" />
        <Button
            android:id="@+id/iv_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_roundcorner"
            android:padding="2dp"
            android:translationZ="@dimen/dp_five"
            android:layout_marginLeft="16dp"
            android:textSize="8dp"
            android:text="定  位"
            android:drawableTop="@drawable/ic_location" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_roundcorner"
        android:layout_alignLeft="@+id/ll_bottom_left"
        android:layout_marginHorizontal="60dp"
        android:layout_marginBottom="@dimen/dp_twenty"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_start_end"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_start"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/wuyishan"
                android:padding="2dp"
                android:visibility="gone"
                android:translationZ="@dimen/dp_five"
                android:layout_marginLeft="6dp"
                android:textSize="8dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="景点介绍"/>
        <TextView
            android:id="@+id/tv_to_describe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_roundcorner"
            android:layout_marginTop="3dp"
            android:translationZ="0dp"
            android:layout_marginLeft="6dp"
            android:textSize="8dp"
            android:text="详细介绍"
            android:drawableTop="@drawable/ic_right" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_map_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_ok"
        android:background="@color/colorPrimary"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:layout_marginHorizontal="60dp"/>
</RelativeLayout>
