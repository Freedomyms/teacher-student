<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_details_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/icon_back_white" />
        <TextView
            android:id="@+id/tv_details_title"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:text="详细介绍"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="22sp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_scenery_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_ten"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/ic_scenery" />
            <TextView
                android:id="@+id/tv_details_describe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="@dimen/dp_ten"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorPrimary"/>
    <Button
        android:id="@+id/btn_broadcast"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_btn_broadcast"
        android:layout_marginVertical="@dimen/dp_five"
        android:textSize="@dimen/dp_twenty"
        android:text="播音"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>
