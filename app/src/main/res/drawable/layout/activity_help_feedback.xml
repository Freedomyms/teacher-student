<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey300"
    tools:context="com.myself.scenery.ui.base.HelpFeedbackActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_feedback_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/dp_fifteen"
            android:background="@drawable/icon_back_white"/>
        <TextView
            android:id="@+id/tv_feedback_title"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:text="帮助与反馈"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/tv_feedback_switch"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:text="管理员"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_ten"
            android:textSize="16sp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="@dimen/dp_twenty"
        android:background="@drawable/bg_roundcorner">

        <EditText
            android:id="@+id/et_feedback_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="我们的进步离不开您的帮助" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="@dimen/dp_twenty"
        android:gravity="center"
        android:background="@drawable/bg_roundcorner">

        <EditText
            android:id="@+id/et_feedback_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="您的邮箱，便于我们给您反馈！" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_feedback_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/dp_twenty"
        android:text="提交"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/dp_twentyFive"
        android:background="@color/colorPrimary"/>
</LinearLayout>
